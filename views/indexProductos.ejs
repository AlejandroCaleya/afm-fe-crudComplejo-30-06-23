<!-- views/index.ejs -->
<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8" />
		<title>Productos</title>
		<link rel="stylesheet" type="text/css" href="/styles.css" />
	</head>
	<body>
		<h1>PRODUCTOS</h1>
		<table>
			<tr>
				<th>ID</th>
				<th>Nombre</th>
				<!-- <th>Categoria</th> -->
				<th>Precio</th>
				<th>Stock</th>
				<!-- <th>Fabricante</th> -->
				<th>Acciones</th>
			</tr>
			<% productos.forEach(producto => { %>
			<tr>
				<td><%= producto.id %></td>
				<td><%= producto.nombre %></td>
				<!-- <td><%= producto.categoria %></td> -->
				<td><%= producto.precio %></td>
				<td><%= producto.stock %></td>
				<!-- <td><%= producto.fabricante %></td> -->
				<td>
					<a href="/editarproductos/<%= producto.id %>">Editar</a>
					<a href="/eliminarproductos/<%= producto.id %>">Eliminar</a>
				</td>
			</tr>
			<% }) %>
		</table>
		<a href="/agregarproductos">Agregar producto</a>
	</body>
</html>
